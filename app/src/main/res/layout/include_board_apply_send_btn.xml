<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/project_white"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_checkbox_yes"
        android:drawablePadding="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="지원 내용을 확인하였습니다."
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        android:drawableStart="@drawable/ic_checkbox_no"
        android:drawablePadding="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="지원서가 확인되었을 때, 알림을 받겠습니다."
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/background_btn_red"
        android:fontFamily="@font/pretendard_bold"
        android:text="지원하기"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>