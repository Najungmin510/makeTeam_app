<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_util_now"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:text="김성우 교수님의 HCI 팀원 찾습니다"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/pretendard_bold"
            android:textColor= "#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor= "#000000"
            android:text="김김김"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교"
            android:fontFamily="@font/pretendard_bold"
            android:textColor= "#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/textViewSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textColor= "#000000"
            android:text="한림대학교"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="18dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학과(학번)"
            android:fontFamily="@font/pretendard_bold"
            android:textColor= "#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/textViewDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="20240000"
            android:textColor= "#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/team_situation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="프론트엔드"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textColor="#687684"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/team_situation_detail_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="안드로이드"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textColor="#687684"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/team_situation_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="백엔드"
            android:textStyle="bold"
            android:textColor="#687684"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
