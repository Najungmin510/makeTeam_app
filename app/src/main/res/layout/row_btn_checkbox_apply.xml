<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/project_white"
    android:gravity="center">

    <CheckBox
        android:id="@+id/btn_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:background="@drawable/selector_checkbox"
        android:layout_marginHorizontal="5dp"/>

    <TextView
        android:id="@+id/team_apply_position_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round_gray"
        android:fontFamily="@font/pretendard_regular"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:text="포지션 명(0)"
        android:textColor="@color/text_gray_blue"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/team_apply_position_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세부사항"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="6dp"/>
    </LinearLayout>


</LinearLayout>