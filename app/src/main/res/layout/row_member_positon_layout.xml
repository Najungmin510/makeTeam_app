<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp"
    android:background="@color/project_white">

            <ImageButton
                android:id="@+id/btn_delete_position"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_light"/>

            <EditText
                android:id="@+id/et_position_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="포지션 입력"
                android:padding="5dp"
                android:inputType="text"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:background="@color/background_text_gray"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/et_position_skill"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="필요스킬"
                android:padding="5dp"
                android:inputType="text"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:background="@color/background_text_gray"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/et_position_people"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="인원 수"
                android:padding="5dp"
                android:inputType="text"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:background="@color/background_text_gray"
                android:layout_marginEnd="10dp"/>

</LinearLayout>