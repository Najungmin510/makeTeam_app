<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/project_white">

    <TextView
        android:id="@+id/text_team_position_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round_gray"
        android:fontFamily="@font/pretendard_regular"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:text="포지션(0)"
        android:textColor="@color/text_gray_blue"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_team_position_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="포지션 내용"
        android:textColor="@color/black"
        android:textSize="15sp" />

</LinearLayout>