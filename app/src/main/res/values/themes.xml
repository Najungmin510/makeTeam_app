<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MakeTeam_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.MakeTeam_app" parent="Base.Theme.MakeTeam_app" />

    <!--텍스트 레이아웃 부분-->
    <style name = "TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--바깥 상자 부분 커스텀-->
        <item name="boxStrokeColor">@color/black</item>
        <item name="errorEnabled">true</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="hintTextColor">@color/black</item>
        <!--오류 부분 커스텀-->
        <item name="errorTextAppearance">@style/ErrorTextInput</item>
    </style>

    <style name="ErrorTextInput">
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <!--탭 바 부분-->

    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>
</resources>